import("//test/xts/tools/build/suite.gni")

ohos_js_hap_suite("ActsPreferencesEtsTest") {
  hap_profile = "src/main/module.json"
  deps = [
    ":preferences_js_assets",
    ":preferences_resources",
  ]
  ets2abc = true
  certificate_profile = "./signature/openharmony_sx.p7b"

  hap_name = "ActsPreferencesEtsTest"
  subsystem_name = "distributeddatamgr"
  part_name = "preferences"
}
ohos_app_scope("preferences_app_profile") {
  app_profile = "AppScope/app.json"

  sources = [ "AppScope/resources" ]
}
ohos_js_assets("preferences_js_assets") {
  source_dir = "src/main/ets"
}
ohos_resources("preferences_resources") {
  sources = [ "src/main/resources" ]

  deps = [ ":preferences_app_profile" ]

  hap_profile = "src/main/module.json"
}
