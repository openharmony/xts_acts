{
  "module": {
    "name": "entry",
    "type": "entry",
    "srcEntry": "./ets/FormAbility/form.ts",
    "description": "$string:description_mainability",
    "mainElement": "MainAbility",
    "deviceTypes": [
      "default",
      "tablet",
      "2in1",
      "wearable"
    ],
    "deliveryWithInstall": true,
    "installationFree": false,
    "pages": "$profile:main_pages",
    "abilities": [
      {
        "name": "com.acts.form.formsystemtestserviceb.hmservice.MainAbility",
        "srcEntry": "./ets/MainAbility/MainAbility.ts",
        "description": "$string:description_mainability",
        "icon": "$media:icon",
        "label": "$string:entry_MainAbility",
        "startWindowIcon": "$media:icon",
        "startWindowBackground": "$color:start_window_background",
        "visible": true,
        "skills": [
          {
            "entities": [
              "entity.system.home"
            ],
            "actions": [
              "action.system.home"
            ]
          }
        ]
      }
    ],
    "extensionAbilities": [
      {
        "name": "FormAbility",
        "srcEntrance": "./ets/FormAbility/form.ts",
        "label": "$string:form_label",
        "description": "$string:form_desc",
        "type": "form",
        "metadata": [
          {
            "name": "ohos.extension.form",
            "resource": "$profile:form_config"
          }
        ]
      }
    ],
    "definePermissions": [
      {
        "grantMode": "system_grant",
        "name": "FMS_FormSupply_commonEvent"
      }
    ],
    "requestPermissions": [
      {
        "name": "FMS_FormSupply_commonEvent"
      }
    ]
  }
}
