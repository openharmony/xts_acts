import { afterAll, afterEach, beforeAll, beforeEach, describe, expect, it, Level, Size, TestType } from '@ohos/hypium';
import { sleep } from '../testability/pages/CommonUtils';

export default function builtinsRegExpExecTest() {
  describe('builtinsRegExpExecTest', () => {
    beforeAll(() => {
    })
    beforeEach(async () => {
      await sleep(100);
    })
    afterEach(() => {
    })
    afterAll(() => {
    })

    /**
     * @tc.number SUB_BUILTINS_REGEXP_EXEC_TEST_0100
     * @tc.name builtinsRegExpExecTest0100
     * @tc.desc Testing
     * @tc.size MediumTest
     * @tc.type Function
     * @tc.level Level 2
     */
    it('builtinsRegExpExecTest0100', TestType.FUNCTION | Size.MEDIUMTEST | Level.LEVEL1, (done: Function) => {
      const caseName = 'builtinsRegExpExecTest0100';
      console.info(`${caseName} test start`);
      // RegExp match indices and /d  ES13 - ECMAScript 2022
      // /quick\s(?<color>brown).+?(jumps)/dgi
      let reg = new RegExp(/quick\s(?<color>brown).+?(jumps)/gi).exec('The Quick Brown Fox Jumps Over The Lazy Dog');
      if (reg) {
        expect(reg[0]).assertEqual('Quick Brown Fox Jumps');
        expect(reg[1]).assertEqual('Brown');
        expect(reg[2]).assertEqual('Jumps');
        expect(reg.index).assertEqual(4);
        // expect(reg.indices).assertEqual([[4, 25], [10, 15], [20, 25]]);
        // expect(reg.groups).assertEqual({ color: [10, 15 ]});
        expect(reg.input).assertEqual('The Quick Brown Fox Jumps Over The Lazy Dog');
        expect(reg.groups).assertDeepEquals({ color: 'Brown' });
      }
      done();
      console.info(`${caseName} test end`);
    })
  })
}