import { beforeAll, beforeEach, describe, it } from '@ohos/hypium';
import Utils from './Utils';
import { Driver, ON } from '@ohos.UiTest';
import router from '@ohos.router';

export default function webViewOnRequestStop() {

  describe('webViewOnRequestStop', () => {
    beforeAll(async (done: Function) => {
      let options: router.RouterOptions = {
        url: 'MainAbility/pages/webViewOnRequestStop',
      }
      try {
        router.clear();
        let pages = router.getState();
        console.info("get OnRequestStop state success " + JSON.stringify(pages));
        if (!("OnRequestStop" == pages.name)) {
          console.info("get OnRequestStop state success " + JSON.stringify(pages.name));
          let result = await router.pushUrl(options);
          await Utils.sleep(2000);
          console.info("push OnRequestStop page success " + JSON.stringify(result));
        }
      } catch (err) {
        console.error("push OnRequestStop page error: " + err);
      }
      done()
    });
    beforeEach(async (done: Function) => {
      await Utils.sleep(2000);
      console.info("web beforeEach start");
      done();
    })

    /*
    * @tc.number     : SUB_WEB_WEBDEAULTONREQUESTSTOP_0100
    * @tc.name       : testWebdefaultOnRequestStop0100
    * @tc.desc       : test WebdefaultOnRequestStop
    * @tc.size       : MediumTest
    * @tc.type       : Function
    * @tc.level      : Level 1
    */
    it('defaultOnRequestStop0100', 0, async (done: Function) => {
      Utils.emitEvent("defaultOnRequestStop0100", 10)
      await Utils.sleep(2000);
      Utils.registerEvent("defaultOnRequestStop0100", true, 8800, done);
      await Utils.sleep(2000);
      let driver = Driver.create();
      await driver.delayMs(1000);
      let StartModel = await driver.findComponent(ON.id("OnRequestStop"));
      await StartModel.click();
      await driver.delayMs(1000);
    })

    /*
    * @tc.number     : SUB_WEB_WEBDEAULTONREQUESTSTOP_0200
    * @tc.name       : testWebdefaultOnRequestStop0200
    * @tc.desc       : test WebdefaultOnRequestStop
    * @tc.size       : MediumTest
    * @tc.type       : Function
    * @tc.level      : Level 1
    */
    it('defaultOnRequestStop0200', 0, async (done: Function) => {
      Utils.emitEvent("defaultOnRequestStop0200", 10)
      await Utils.sleep(2000);
      Utils.registerEvent("defaultOnRequestStop0200", true, 8802, done);
      await Utils.sleep(2000);
      let driver = Driver.create();
      await driver.delayMs(1000);
      let StartModel = await driver.findComponent(ON.id("OnRequestStop"));
      await StartModel.click();
      await driver.delayMs(1000);
    })

    /*
    * @tc.number     : SUB_WEB_WEBDEAULTONREQUESTSTOP_0300
    * @tc.name       : testWebdefaultOnRequestStop0300
    * @tc.desc       : test WebdefaultOnRequestStop
    * @tc.size       : MediumTest
    * @tc.type       : Function
    * @tc.level      : Level 1
    */
    it('defaultOnRequestStop0300', 0, async (done: Function) => {
      Utils.emitEvent("defaultOnRequestStop0300", 10)
      await Utils.sleep(2000);
      Utils.registerEvent("defaultOnRequestStop0300", true, 8804, done);
      await Utils.sleep(2000);
      let driver = Driver.create();
      await driver.delayMs(1000);
      let StartModel = await driver.findComponent(ON.id("OnRequestStop"));
      await StartModel.click();
      await driver.delayMs(1000);
    })
  })
}
