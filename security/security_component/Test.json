{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "1200000",
	    "bundle-name": "com.example.securitycomponent",
	    "module-name": "phone",
	    "shell-timeout": "1200000",
	    "testcase-timeout": "180000"
    },
    "kits": [
        {
            "test-file-name": [
                "ActsSecComponentTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "param set persist.ace.testmode.enabled 1",
                "param set persist.sys.suspend_manager_enbled 0",
                "param set persist.usb.setting.gadget_conn_prompt false",
                "reboot",
                "wait 5",
                "power-shell wakeup",
                "uinput -T -m 300 2700 280 200",
                "uinput -K -d 2050 -u 2050",
                "wait 5",
                "uinput -T -m 300 2700 280 200",
                "power-shell setmode 602"
            ],
            "teardown-command": [
                "power-shell setmode 601"
            ]
        }
    ]
}
