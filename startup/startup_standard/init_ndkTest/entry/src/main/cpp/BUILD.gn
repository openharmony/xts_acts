import("//build/config/ohos/config.gni")
import("//build/ohos.gni")
import("//foundation/ability/ability_runtime/ability_runtime.gni")
import("//foundation/arkui/napi/napi.gni")

INIT_PATH = init_path

config("config") {
  visibility = [ ":*" ]

  cflags = [
    "-Wall",
    "-Werror",
    "-g3",
    "-Wunused-variable",
  ]
}

config("public_config") {
}

ohos_shared_library("initndk") {
  testonly = true
  subsystem_name = "startup"
  part_name = "init"
  sources = [ "./initndk.cpp" ]
  libs = [ rebase_path(libcxx_ndk_shared_file) ]
  include_dirs = [ "$INIT_PATH/interfaces/kits/syscap/include" ]

  configs = [ ":config" ]
  deps = [ "$INIT_PATH/interfaces/kits/syscap:deviceinfo_ndk" ]

  external_deps = [ "napi:ace_napi" ]

  output_extension = "so"
}
