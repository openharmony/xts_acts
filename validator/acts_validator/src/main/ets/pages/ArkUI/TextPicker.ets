            console.info('TextPicker 省市区联动:onChange ' + JSON.stringify(value) + ', ' + 'index: ' + JSON.stringify(index))
            this.address = value.toString().replace(/,/g, '-')
          })
          .margin({ top: 48 })

        Column() {
          Text('您选择的订单地址为:')
            .fontSize(24)
            .margin({ left: 12, right: 12 })

