{
    "description": "Configuration for ActsDrmNdkTest demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "360000",
        "bundle-name": "com.example.myapplication",
        "module-name": "entry_test",
        "shell-timeout": "360000",
        "testcase-timeout": 70000
    },
    "kits": [
        {
            "test-file-name": [
                "ActsDrmNDKTest.hap",
				"ActsDrmMainNdkTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },{
            "type": "ShellKit",
            "run-command": [
                "power-shell wakeup",
                "power-shell setmode 602",
		"param set hiviewdfx.appfreeze.filter_bundle_name com.example.myapplication"
            ]
        }
    ]
}
