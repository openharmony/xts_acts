{
    "description": "Configuration for OhAudioNdk Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "600000",
        "shell-timeout": "600000",
        "bundle-name": "ohos.acts.multimedia.audio.avrecorder",
        "module-name": "entry_test",
        "testcase-timeout": 90000
    },
    "kits": [
        {
            "test-file-name": [
                "ActsOhRecorderNDKMainTest.hap",
                "ActsAVRecorderNDKTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "power-shell wakeup",
                "power-shell setmode 602"
            ]
        }
    ]
}