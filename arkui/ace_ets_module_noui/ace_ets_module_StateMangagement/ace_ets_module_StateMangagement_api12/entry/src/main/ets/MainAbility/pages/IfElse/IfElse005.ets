// 005 if/else与Builder混用
@Entry
@Component
struct IfElse005 {
  @State flag: boolean = false;

  @Builder
  builderFunc(msg: string) {
    Text(msg)
      .id('text')
  }

  build() {
    Column({ space: 20 }) {
      Text('使用if/else进行条件判断，渲染内容为Builder函数，判断条件为状态变量')
        .fontSize(15)
        .fontColor(Color.Gray)
      Button('click to switch flag value.')
        .id('btn')
        .onClick(() => {
          this.flag = !this.flag;
        })
      if (this.flag) {
        this.builderFunc('this.flag = true.')
      } else {
        this.builderFunc('this.flag = false.')
      }
    }
    .width('100%')
    .height('100%')
    .justifyContent(FlexAlign.Center)
  }
}