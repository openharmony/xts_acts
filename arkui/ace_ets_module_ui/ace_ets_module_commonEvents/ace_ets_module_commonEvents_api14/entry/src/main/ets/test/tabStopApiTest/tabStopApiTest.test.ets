import { describe, beforeAll, beforeEach, afterEach, afterAll, it, expect } from "@ohos/hypium"
import router from '@ohos.router';
import {UiComponent, UiDriver, Component, Driver, UiWindow, ON, BY, MatchPattern, DisplayRotation, ResizeDirection, WindowMode, PointerMatrix} from '@ohos.UiTest';
import CommonFunc from '../../MainAbility/common/Common';


export default function tabStopApiTest() {
  describe('tabStopApiTest', () => {
    beforeEach(async (done: Function) => {
      console.info("tabStopApiTest beforeEach start");
      let options: router.RouterOptions = {
        url: "MainAbility/pages/tabStopApiTest/tabStopApiTest",
      }
      try {
        router.clear();
        let pages = router.getState();
        console.info("get tabStopApiTest state pages: " + JSON.stringify(pages));
        if (!("TabStop" == pages.name)) {
          console.info("get tabStopApiTest state pages.name: " + JSON.stringify(pages.name));
          let result = await router.push(options);
          await CommonFunc.sleep(2000);
          console.info("push tabStopApiTest success: " + JSON.stringify(result));
        }
      } catch (err) {
        console.error("push tabStopApiTest page error: " + err);
        expect().assertFail();
      }
      done();
    });

    /**
     * @tc.number ArkUI_KeyEvent_TabStop_1000
     * @tc.name   Tests the unicode property of the keyEvent
     * @tc.desc   Confirm unicode value
     * @tc.size   MediumTest
     * @tc.type   Function
     * @tc.level  0
     */
    it('tabStopApiTest_1000', 0, async (done: Function) => {
      console.info('[tabStopApiTest_1000] START');
      let driver: Driver = Driver.create();
       await CommonFunc.sleep(2000);
      await driver.triggerKey(2049);
      await driver.triggerKey(2049);
      await CommonFunc.sleep(2000);
      await driver.triggerKey(2049);
      await CommonFunc.sleep(2000);
      await driver.triggerKey(2049);
      let strJson = getInspectorByKey('button 3');
      let obj: ESObject = JSON.parse(strJson);
      console.info("[tabStopApiTest_1000] obj is: " + obj.$attrs.tabStop);
      expect(obj.$attrs.tabStop).assertEqual(true);
      console.info('[tabStopApiTest_1000] END');
      done();
    });
  })
}