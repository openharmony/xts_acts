import { describe, beforeAll, beforeEach, afterEach, afterAll, it, expect } from '@ohos/hypium';
import { Driver, ON } from '@ohos.UiTest';
import router from '@system.router';
import Utils from '../Utils';

export default function editableTitleBarSafeAreaTypes() {
  describe('editableTitleBarSafeAreaTypes', function () {
    beforeEach(async function (done) {
      console.info('editableTitleBarSafeAreaTypes beforeEach start');
      let options = {
        uri: 'MainAbility/pages/editableTitleBar/editableTitleBarSafeAreaTypes',
      }
      let result;
      try {
        router.clear();
        let pages = router.getState();
        console.info('get editableTitleBarSafeAreaTypes state pages: ' + JSON.stringify(pages));
        if (!('editableTitleBarSafeAreaTypes' == pages.name)) {
          console.info('get editableTitleBarSafeAreaTypes pages.name: ' + JSON.stringify(pages.name));
          result = await router.push(options);
          await Utils.sleep(2000);
          console.info('push editableTitleBarSafeAreaTypes page result: ' + JSON.stringify(result));
        }
      } catch (err) {
        console.error('push editableTitleBarSafeAreaTypes page error: ' + err);
      }

      await Utils.sleep(1000);
      console.info('editableTitleBarSafeAreaTypes beforeEach end');
      done();
    });

    afterEach(async function () {
      await Utils.sleep(1000);
      console.info('editableTitleBarSafeAreaTypes after each called');
    })

    /**
     * @tc.number editableTitleBarSafeAreaTypes
     * @tc.name   editableTitleBarSafeAreaTypes
     * @tc.desc   Test editableTitleBarSafeAreaTypes
     * @tc.size   MediumTest
     * @tc.type   Function
     * @tc.level  0
     */
    it('editableTitleBarSafeAreaTypes_0100', 0, async function (done) {
      console.info('[editableTitleBarSafeAreaTypes_0100] START');
      let driver = await Driver.create();
      await driver.delayMs(2000);
      // 点击打开editableTitleBar是否存在以下入口。
      let title = await driver.findComponent(ON.text('编辑页面'));
      expect(title !== null).assertTrue();
      await driver.delayMs(1000);
      console.info('[editableTitleBarSafeAreaTypes_0100] END');
      done();
    });
  })
}