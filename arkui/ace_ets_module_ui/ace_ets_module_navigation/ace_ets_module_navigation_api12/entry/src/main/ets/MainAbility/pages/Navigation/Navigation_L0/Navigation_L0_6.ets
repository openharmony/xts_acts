@Entry
@Component
struct Navigation_L0_6 {
  @Provide('pageInfos') pageInfos: NavPathStack = new NavPathStack();
  @State text1:string = 'null'

  @Builder PageMap(name:string){
    if (name === 'pageOne'){
      Navigation_L0_6_pageOne({text1:this.text1})
    }else if(name === 'pageTwo'){
      Navigation_L0_6_pageTwo()
    }
  }

  build() {
    Navigation(this.pageInfos) {
      Button('pushPath pageOne').onClick((event: ClickEvent) => {
        this.pageInfos.pushPath({name:'pageOne'})
      }).id('Navigation_L0_6_btn1')
      Text(this.text1).id('Navigation_L0_6_text1')
    }
    .navDestination(this.PageMap)
    .height('100%')
    .width('100%')
    .title('navigation')
    .mode(NavigationMode.Split)
  }
}


@Component
struct Navigation_L0_6_pageOne{
  @Consume('pageInfos') pageInfos: NavPathStack;
  @Link text1:string;
  build() {
    NavDestination(){
      Button('pushPath pageTwo').onClick((event: ClickEvent) => {
        this.pageInfos.pushPath({
          name:'pageTwo',
          onPop: (popInfo: PopInfo)=>{
            this.text1 = JSON.stringify(popInfo.result);
          }
        });
      }).id('Navigation_L0_6_pageOne_btn1')

    }.title('pageOne')
  }
}
@Component
struct Navigation_L0_6_pageTwo{
  @Consume('pageInfos') pageInfos: NavPathStack;
  build() {
    NavDestination(){
      Button('pop').onClick(() => {
        this.pageInfos.pop()
      }).id('Navigation_L0_6_pageTwo_btn1')
    }.title('pageTwo')
  }
}
