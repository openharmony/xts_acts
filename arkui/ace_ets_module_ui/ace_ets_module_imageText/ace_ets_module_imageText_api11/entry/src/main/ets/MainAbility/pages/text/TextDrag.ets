@Entry
@Component
struct TextDrag {
  @State text: string = '';

  build() {
    Column() {
      Text('test drag event draggable设为true, 有onDragStart')
        .key('DraggedText')
        .draggable(true)
        .width('60%')
        .copyOption(CopyOptions.LocalDevice)
        .onDragStart(() => {
          this.text = 'Text--onDragStart'
        })
        .onDragEnd(()=>{
          this.text = 'Text--onDragEnd'
        })
        .height('30%')
      TextArea({ placeholder: this.text })
        .key('textAreaDrag')
        .width('95%')
        .height('10%')
    }.width('100%')
  }
}