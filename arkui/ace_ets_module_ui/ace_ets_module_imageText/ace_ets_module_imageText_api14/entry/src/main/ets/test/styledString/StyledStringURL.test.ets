import { describe, beforeAll, beforeEach, afterEach, afterAll, it, expect } from "@ohos/hypium"
import router from '@ohos.router';
import {UiComponent, Driver, Component, UiWindow, ON, BY, MatchPattern, DisplayRotation, ResizeDirection, WindowMode, PointerMatrix} from '@ohos.UiTest';
import CommonFunc from '../../MainAbility/common/Common';
import { MessageManager, Callback } from '../../MainAbility/common/MessageManager';

export default function StyledStringURL() {
  describe('StyledStringURL', () => {
    beforeEach(async (done: Function) => {
      console.info("StyledStringURL beforeEach start");
      let options: router.RouterOptions = {
        url: 'MainAbility/pages/styledString/StyledStringURL',
      }
      try {
        router.clear();
        let pages = router.getState();
        console.info("get StyledStringURL state pages: " + JSON.stringify(pages));
        if (!("StyledStringURL" == pages.name)) {
          console.info("get StyledStringURL state pages.name: " + JSON.stringify(pages.name));
          let result = await router.push(options);
          await CommonFunc.sleep(2000);
          console.info("push StyledStringURL success: " + JSON.stringify(result));
        }
      } catch (err) {
        console.error("push StyledStringURL page error: " + err);
        expect().assertFail();
      }
      done();
    });

    /**
     * @tc.number    SUB_ACE_StyledStringURL_0100
     * @tc.name      StyledStringURL_0100
     * @tc.desc      set api
     * @tc.level:    Level 2
     * @tc.type :
     * @tc.size :
     */
    it('StyledStringURL_0100', 0, async (done: Function) => {
      console.info('StyledStringURL_0100 START');
      let driver: Driver = Driver.create();
      await CommonFunc.sleep(1000);
      let button: Component = await driver.findComponent(ON.id('but'));
      await CommonFunc.sleep(1000);
      await button.click()
      await CommonFunc.sleep(1000);
      let strJson = getInspectorByKey('text2');
      let obj: ESObject = JSON.parse(strJson);
      console.info("[StyledStringURL_0100] component obj is: " + JSON.stringify(obj.$attrs.content));
      expect(obj.$attrs.content).assertContain('7');
      console.info('[StyledStringURL_0100] END');
      done();
    });

  })
}

