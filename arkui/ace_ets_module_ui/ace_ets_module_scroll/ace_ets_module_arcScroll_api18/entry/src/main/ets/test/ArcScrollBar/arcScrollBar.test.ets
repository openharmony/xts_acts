import { describe, beforeAll, beforeEach, afterEach, afterAll, it, expect, Level } from '@ohos/hypium';
import router from '@ohos.router';
import { Driver, Component, UiWindow, ON } from '@ohos.UiTest';
import CommonFunc from '../../MainAbility/common/Common';
import events_emitter from '@ohos.events.emitter';

export default function arcScrollBar() {
  describe('arcScrollBar', () => {
    beforeEach(async (done: Function) => {
      console.info("arcScrollBar beforeEach start");
      let options: router.RouterOptions = {
        url: "MainAbility/pages/ArcScrollBar/arcScrollBar",
      }
      try {
        router.clear();
        let pages = router.getState();
        console.info("get arcScrollBar state pages:" + JSON.stringify(pages));
        if (!("arcScrollBar" == pages.name)) {
          console.info("get arcScrollBar pages.name:" + JSON.stringify(pages.name));
          let result = await router.pushUrl(options);
          await CommonFunc.sleep(2000);
          console.info("push arcScrollBar page result:" + JSON.stringify(result));
        }
      } catch (err) {
        console.error("push arcScrollBar page error:" + err);
      }
      console.info("arcScrollBar beforeEach end");
      done();
    });

    /**
     * @tc.number    arcScrollBar_001
     * @tc.name      arcScrollBar_0100
     * @tc.desc      ArcScrollBar component.
     * @tc.level     Level 0
     * @tc.type
     * @tc.size
     */
    it('arcScrollBar_0100', Level.LEVEL0, async (done: Function) => {
      console.info('[arcScrollBar_0100] START');
      let driver = Driver.create();
      await CommonFunc.sleep(1500);
      let strJson = getInspectorByKey('arcScrollBar');
      console.info("[arcScrollBar_0100] component obj is: " + JSON.stringify(JSON.parse(strJson)));
      console.info("[arcScrollBar_0100] state: " + JSON.stringify(JSON.parse(strJson).$attrs.state));
      await CommonFunc.sleep(1000);
      expect(JSON.parse(strJson).$attrs.borderStyle).assertEqual("BorderStyle.Solid");
      expect(JSON.parse(strJson).$attrs.align).assertEqual("Alignment.Center");
      console.info('[arcScrollBar_0100] END');
      done();
    });
  })
}
