import { AttrsManager } from '../../MainAbility/common/AttrsManager';
import Utils from '../../MainAbility/common/Utils';
import CommonTest from '../common/CommonTest';
import { describe, expect } from '@ohos/hypium'

export default function ContrastTest() {
  //A list of components that support the position attribute, which is required.
  let supportView = [
    'Button',
  ]

  //Custom params.
  let targetComponentWidth = 200;
  let targetComponentHeight = 200;
  let parentWidth = 320;
  let parentHeight = 200;
  let gutter = 10;
  let columns = 3;
  let pageConfig: ESObject = {
    testName: 'testContrast',
    pageName: 'contrastPage',
    pageUrl: 'MainAbility/pages/contrast/ContrastPage',
    targetComponentHeight: targetComponentHeight,
    targetComponentWidth: targetComponentWidth,
    parentHeight: parentHeight,
    parentWidth: parentWidth,
    referenceComponentKey: 'referenceComponentKey',
    parentComponentKey: 'parentComponentKey',
    gutter: gutter,
    columns: columns
  } as ESObject

  let testValues: ESObject[] = [{
    describe: 'SetContrast',
    setValue: {
      contrast: 0.1
    } as ESObject,
    expectValue: {
      contrast: 0.1
    } as ESObject
  } as ESObject]

  /**
   * Create test suite.
   */
  describe('contrastTest', () => {
    //Generate test cases (it) through a loop based on the support view * test values.
    CommonTest.initTest(pageConfig, supportView, testValues, async (data:ESObject) => {
      //Modify the target component properties.
      console.error('[' + data.caseTag + '] contrastTest');
      console.error('[' + data.caseTag + '] check contrast.' + ` ${data.testValue.setValue.contrast}`);
      console.error('[' + data.testValue.expectValue.contrast + '] expectValue');
      console.error('[' + data.viewObj.$attrs.contrast + '] viewObj.$attrs.contrast');
      expect(data.viewObj.$attrs.contrast).assertEqual(data.testValue.expectValue.contrast);

    });
  })
}