ohos_xts_action("cpLibuv") {
  testonly = true
  script = "cplibuv.sh"
  outputs = [ "${target_out_dir}/cplibuv.log" ]
  root_libuv_path = rebase_path("//")
  args = [ "$root_libuv_path" ]
  deps = [
    ":ActsLibuvTest",
    ":libuvruntest",
  ]
  suite_type = "bin"
}

ohos_xts_group("libuvTest") {
